<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_700"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/headerFoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/human"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/isimSoyisimHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Kaan Kaplan"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/headerFoto"
        app:layout_constraintStart_toStartOf="@+id/headerFoto"
        app:layout_constraintTop_toBottomOf="@+id/headerFoto" />

    <ProgressBar
        android:id="@+id/headerprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/headerFoto"
        app:layout_constraintEnd_toEndOf="@+id/headerFoto"
        app:layout_constraintStart_toStartOf="@+id/headerFoto"
        app:layout_constraintTop_toTopOf="@+id/headerFoto" />


</androidx.constraintlayout.widget.ConstraintLayout>