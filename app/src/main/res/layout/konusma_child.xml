<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/konsuma_circle_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/default_profile_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_konusma_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/konsuma_circle_img"
        app:layout_constraintTop_toTopOf="@+id/konsuma_circle_img" />

    <TextView
        android:id="@+id/son_mesaj_konusma_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="6dp"
        android:text=""
        android:textColor="#808080"
        app:layout_constraintBottom_toBottomOf="@+id/konsuma_circle_img"
        app:layout_constraintStart_toEndOf="@+id/konsuma_circle_img"
        app:layout_constraintTop_toBottomOf="@+id/user_name_konusma_tv" />

    <TextView
        android:id="@+id/tarih_konusma_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgOkunmadi"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tarih_konusma_tv"
        app:layout_constraintStart_toStartOf="@+id/tarih_konusma_tv"
        app:layout_constraintTop_toBottomOf="@+id/tarih_konusma_tv"
        app:srcCompat="@drawable/okunmadi_nokta" />

</androidx.constraintlayout.widget.ConstraintLayout>