<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/groupImageKonusma"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/human"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/groupKonusmaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="Group Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/groupImageKonusma"
        app:layout_constraintTop_toTopOf="@+id/groupImageKonusma" />

    <TextView
        android:id="@+id/groupKonusmaSonMesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="6dp"
        android:text="Son grup Mesajıdır"
        app:layout_constraintBottom_toBottomOf="@+id/groupImageKonusma"
        app:layout_constraintStart_toEndOf="@+id/groupImageKonusma"
        app:layout_constraintTop_toBottomOf="@+id/groupKonusmaName" />

    <TextView
        android:id="@+id/groupKonusmaTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:text="2d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgOkunmadıNokta"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/okunmadi_nokta"
        app:layout_constraintEnd_toEndOf="@+id/groupKonusmaTime"
        app:layout_constraintStart_toStartOf="@+id/groupKonusmaTime"
        app:layout_constraintTop_toBottomOf="@+id/groupKonusmaTime" />


</androidx.constraintlayout.widget.ConstraintLayout>