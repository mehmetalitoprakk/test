<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_getter"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:id="@+id/tvNameGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mustafa"
            android:textSize="11sp"
            android:paddingStart="6dp"
            android:paddingTop="2dp"
            android:textColor="@color/black"
            android:visibility="visible"/>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >



        <TextView
            android:id="@+id/tvMessageSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxWidth="300dp"
            android:padding="6dp"
            android:text="dsasdasdasdadsasd"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

        </TextView>

        <TextView
            android:id="@+id/tvTimeSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.30"
            android:padding="3dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="0.5dp"
            android:textSize="12sp"
            android:textColor="@color/backround"
            android:layout_gravity="bottom"/>


    </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/imgSenderContainer"
        android:layout_width="250dp"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/message_getter"
        android:layout_height="350dp">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:indeterminateTint="@color/teal_700"
            android:id="@+id/yukleniyorSenderProgress">

        </ProgressBar>

        <ImageView
            android:id="@+id/imgSenderView"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/timeFotoSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.13"
            android:layout_gravity="bottom|end"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="3dp"/>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/videoContainer"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/message_getter">



        <ImageView
            android:id="@+id/imgViewVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_margin="2dp"
            android:maxWidth="300dp"
            android:layout_gravity="center"
            android:src="@drawable/placeholder"
            android:adjustViewBounds="true">

        </ImageView>
        <ImageView
            android:id="@+id/playButtonVideo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_play_button"
            android:layout_gravity="center">

        </ImageView>

        <TextView
            android:id="@+id/timeVideoSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.13"
            android:layout_gravity="bottom|end"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="3dp"/>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>